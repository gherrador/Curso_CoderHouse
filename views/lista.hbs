<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/main.css">
    <script src="/socket.io/socket.io.js"></script>
    <title>Lista de Productos</title>

</head>

<body>

    <h3>Panel de productos</h3>
    <div class="carga">
        <form action="/" method="get">
            <button type="submit" class="carga">Cargar un producto</button>
        </form>
    </div>
    {{#if user}}
    <p>Vista de Productos</p>

    <div class="form-group">
        <label>Bievenido! {{user.username}}</label>
        <div id="user-profile-2" class="user-profile">
            <div class="tabbable">
                <ul class="nav nav-tabs padding-18">
                    <li class="active">
                        <a data-toggle="tab" href="#home">
                            <i class="green ace-icon fa fa-user bigger-120"></i>
                            Profile
                        </a>
                    </li>
                </ul>
                <div class="tab-content no-border padding-24">
                    <div id="home" class="tab-pane in active">

                        <div class="row">

                            <div class="col-xs-12 col-sm-3 center">
                                <span class="profile-picture">
                                    <img class="imagen" alt=" Avatar" id="avatar2" src={{{user.foto}}}>
                                </span>

                                <div class="space space-4"></div>

                            </div><!-- /.col -->

                            <div class="col-xs-12 col-sm-9">


                                <div class="profile-user-info">
                                    <div class="profile-info-row">
                                        <div class="profile-info-name"> Nombre Completo </div>

                                        <div class="profile-info-value">
                                            <span>{{user.username}}</span>
                                        </div>
                                    </div>
                                    <div class="profile-info-row">
                                        <div class="profile-info-name"> Email </div>

                                        <div class="profile-info-value">
                                            <span>{{user.email}}</span>
                                        </div>
                                    </div>

                                </div>

                                <div class="hr hr-8 dotted"></div>

                                <div class="profile-user-info"></div>

                            </div><!-- /.col -->

                        </div><!-- /.row -->

                    </div><!-- /#home -->
                </div>

            </div>
        </div>

        <form action="/logout" method="get" class="form-horizontal" role="form">
            <div class="form-group last" style="margin-bottom:0px;">
                <div class="col-sm-offset-3 col-sm-9">
                    <input type="hidden" name="form" value="1" />
                    <button type="submit" class="btn btn-success btn-sm">
                        Desloguearse
                    </button>
                </div>
            </div>
        </form>

    </div>
    {{else}}
    <p>Vista de Productos</p>

    <div class="form-group">
        <label>Usuario no Logeado</label>
    </div>

    {{/if}}
    {{#mytitle}}Lista de Productos{{/mytitle}}

    {{#if productos}}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>

            </tr>
        </thead>
        <tbody>

            {{#each productos}}

            <tr>
                <th scope="row">{{_id}}</th>
                <td><b>{{title}}</b></td>
                <td>{{price}}</td>
                <td><img class="img-thumbnail" src={{{thumbnail}}} alt="" /></td>
                <td>
                    <form action="/productos/actualizar/{{{_id}}}?id={{{_id}}}" method="put" role="form">
                        <button id='actualizar-producto' type="submit" class="form-control">Actualizar Producto</button>
                    </form>
                    <form action="/productos/borrar/{{{_id}}}" method="POST" role="form">
                        <button id='borrar-producto' type="submit" class="form-control">Eliminar Producto</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}

    <p>No hay productos</p>

    {{/if}}
</body>