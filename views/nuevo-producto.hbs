<body>
    <form action="/api/productos/guardar" method="post" id='formulario' role="form">
    <script src="/socket.io/socket.io.js", charset="utf-8"></script>    
        <div class="form-group">
            <label for="name">Title</label>
            <input class="form-control" type="text" name="title" id='titulo'>
        </div>
        <div class="form-group">
            <label for="name">Price</label>
            <input class="form-control" type="number" name="price" id='precio'>
        </div>
        <div>
            <label for="name">Image</label>
            <input class="form-control" type="text" name="thumbnail" id='foto'>
        </div>        
        <button type="submit" id="btn">CARGAR PRODUCTO</button>

        <li><a href="/api/productos/lista"></a></li>
    </form>
           <h1>Lista de Productos</h1> 
    <div id="lista"></div>       
    <script src="/lista.js" charset="utf-8"></script>
